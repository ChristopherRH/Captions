@{
    ViewBag.Title = "Posts Page";
}
@using Captions.Models
@model IEnumerable<Post>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("CreatePost", "Post", FormMethod.Post, new { @name = "newPost", id = "newPost" }))
{
    <input name="title" type="text" />
    <textarea name="content"></textarea>

    <input type="submit" id="Submit" name="Submit" class="btn btn-success m-t-5" value="Submit" />
}