@model PostListViewModel

@foreach (var post in Model.Posts)
{
    <div>
        <p class="small font-weight-bold">@post.CreatedDate</p>
        <h2>@post.PostTitle</h2>
        <hr />

        <span>@post.PostContent</span>

        <hr />
        @if (post.Captions.Captions.Any())
        {
        <div id="nanogallery-@post.ID" data-nanogallery2='{ "itemsBaseURL": "@Request.Url.GetLeftPart(UriPartial.Authority)"}'>
            @foreach (var image in post.Captions.Captions)
            {
                <a href="@Url.Action("GetImage", new { id = image.ID })"
                   data-ngthumb="@Url.Action("GetImage", new { id = image.ID })"
                   data-ngid="@image.ID"
                   ></a>

            }
        </div>            
        }
        else {
            <p class="text-center font-italic small">No Images Available</p>
        }
    </div>
    <br /><br /><br /><br /><br /><hr />

}
