@Styles.Render("~/Content/login")
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.Bootstrap().Input(name: "username", inputType: FormInputType.Text).SetPlaceholder("Username")
    @Html.Bootstrap().Input(name: "password", inputType: FormInputType.Password).SetPlaceholder("Password")
    @Html.Bootstrap().Button(buttonType: ButtonType.Submit, text: "Login")
}